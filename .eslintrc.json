{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": "airbnb",
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": [
		"react"
	],
	"rules": {
		"react/jsx-filename-extension": 0,
		"import/prefer-default-export": 0,
		"global-require": 0,
		"no-mixed-operators": 0
	},
	"parser": "babel-eslint",
	"settings": {
		"import/resolver": {
			"node": {
				"paths": "./resources/js"
			}
		}
	}
}